generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Switch {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  switchId  String?  @unique
  isOn      Boolean  @default(false)
  updatedAt DateTime @updatedAt
  lastOnTime DateTime?
  powerRating Float    @default(0.0)
  electricityRate Float    @default(0.0)
  minutesON Int      @default(0)
  powerConsumed Float    @default(0.0)
  billAmount Float    @default(0.0)
}

